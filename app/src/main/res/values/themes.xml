<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GM_BagOfTricks_V2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#75289F</item>
        <item name="colorPrimaryVariant">#6a0080</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#33691e</item>
        <item name="colorSecondaryVariant">#003d00</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>



    <style name="Theme.GM_BagOfTricks_V2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Button.Green" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/base_green</item>
    </style>

    <style name="Theme.GM_BagOfTricks_V2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GM_BagOfTricks_V2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>